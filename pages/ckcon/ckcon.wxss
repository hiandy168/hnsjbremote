/* pages/content/content.wxss */
.content-reason {
    padding: 10rpx 30rpx 20rpx;
    background: #EDEDED;
}
.reason-item {
    margin-top: 31rpx;
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid rgba(120,120,120,.15);
}
.reason-item:last-child {
    border-bottom: none;
}
.reason-content {
    color: #898989;
    font-size: 34rpx;
    line-height:48rpx;
}
.reason-item:first-child .reason-content {
    color: #0A0A0A;
}
.reason-info {
    margin-top:21rpx;
    font-size: 26rpx;
    color: #A5A5A5;
    line-height:1;
}
.reason-time {
    margin-left: 0.5em;
}
.content-area {
    padding:0 30rpx;
    margin-top: 50rpx;
}
.content-title {
    margin: 50rpx 0 0 0;
    font-size: 48rpx;
    color: #000000;
    line-height: 67rpx;
}

.content-info {
    margin-top: 19rpx;
    color: #888888;
    font-size: 30rpx;
}
.content-info text {
    margin-left: 1em;
}
.content-info text:first-child {
    margin-left: 0;
}
.info-copyfrom {
    color: #576B95;
}
.content-content {
    margin-top:50rpx;
    font-size: 36rpx;
    line-height: 56rpx;
    color: #4A4A4A;
    padding-bottom: 50rpx;
    border-bottom: 1rpx solid #E3E3E3;
}

.content-content text {
    color: #111111;
    font-size: 34rpx;
    line-height:50rpx;
    margin-top: 30rpx;
}

.content-content image,
.content-content video {
    margin-top: 30rpx;
    width: 100%;
}

.padding {
    padding:0 30rpx;
}
.flow {
    width: 100%;
    font-size: 36rpx;
    color: #ACACAC;
    position: relative;
    margin-top: 40rpx;
}

.flow .line-left {
    content: '';
    display: block;
    position: absolute;
    width: 4rpx;
    left: 14rpx;
    top: 40rpx;
    background: #E5E5E5;
}

.workflow-item {
    padding-left: 77rpx;
    position: relative;
    line-height: 100rpx;
}

.workflow-item::after {
    content: '';
    display: block;
    clear: both;
}

.workflow-item::before {
    left: 0;
    content: '';
    display: block;
    position: absolute;
    width: 25rpx;
    height: 25rpx;
    top: 32.5rpx;
    background: #e5e5e5;
    border-radius: 25rpx;
    border:5rpx solid #F7F7F7;
}

.workflow-item.last-item {
    color: #FF004A;
}

.workflow-item.last-item::before {
    background: #F43530;
    border:none;
    left:1rpx;
    top:38.5rpx;
}
.workflow-item.last-item::after {
    background: #F43530;
    left: -3rpx;
    content: '';
    display: block;
    position: absolute;
    width: 37rpx;
    height: 37rpx;
    top: 32.5rpx;
    border-radius: 30rpx;
    opacity:0.21;
}
.workflow-item view {
    display: inline;
}
.workflow-time {
    float: right;
}
.content-options {
    display: flex;
    justify-content: space-around;
    flex-direction: row;
    width:100%;
    margin-top: 60rpx;
}
.content-options button {
    width:190rpx;
    height:80rpx;
    box-sizing: border-box;
}
.content-option {
    margin-top: 64rpx;
}
.btn-container {
    padding:0 40rpx;
}
.reject-reason {
    background: #ffffff;
    border-top: 1rpx solid #E5E5E5;
    border-bottom: 1rpx solid #E5E5E5;
    color: #222222;
    font-size: 34rpx;
    line-height: 48rpx;
    width:100%;
    padding:20rpx 30rpx;
}
.btn-container button {
    margin-top: 50rpx;
}
.picker {
    height:100rpx;
    width:100%;
    background: #ffffff;
    padding:0 30rpx;
    line-height:100rpx;
    font-size: 36rpx;
    position: relative;
    border-top: 1rpx solid #E5E5E5;
    border-bottom: 1rpx solid #E5E5E5;
    margin-top: 30rpx;
}