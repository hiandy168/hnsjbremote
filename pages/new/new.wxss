.prop-container {
    margin-top: 50rpx;
}
.input {
    background: #ffffff;
    border-top: 1rpx solid #E5E5E5;
    border-bottom: 1rpx solid #E5E5E5;
    color: #222222;
    font-size: 34rpx;
    line-height: 48rpx;
    width:100%;
    padding:20rpx 30rpx;
    box-sizing: border-box;
}

.content-container {
    background: #ffffff;
    padding-bottom: 100rpx;
}
.content-content {
    padding:0 30rpx;
    margin-top: 50rpx;
}
.content-input {
    color: #111111;
    line-height: 55rpx;
    font-size: 34rpx;
}
.content-media {
    padding:12rpx;
    border:1px dashed #B2B2B2;
    height:180rpx;
    display: flex;
    position: relative;
    box-sizing: border-box;
}
.media-del {
    position: absolute;
    width:30rpx;
    height:30rpx;
    right:12rpx;
    top:12rpx;
    background: url("https://www.hnsjb.cn/static/img/wx/delete.png") center center no-repeat;
    background-size: 30rpx 30rpx;
}
.media-title {
    padding:12rpx;
    text-align: center;
    height:155rpx;
}
.content-media-add {
    height:75rpx;
    width:100%;
    display: flex;
}
.add-btn {
    width:70rpx;
    height: 70rpx;
    border-radius: 50%;
    border: 2rpx dashed #B2B2B2;
    background: url("https://www.hnsjb.cn/static/img/wx/add.png") center center no-repeat;
    background-size: 35rpx 35rpx;
}
.media-add-area {
    width:590rpx;
    height:75rpx;
    background: #DEDEDE;
    border-radius: 200rpx;
    margin-left: 24rpx;
    display: flex;
}
.media-add-area view {
    height:75rpx;
    flex:1;
}
.img-add {
    background: url("https://www.hnsjb.cn/static/img/wx/image.png") center center no-repeat;
    background-size: 50rpx 42rpx;
    background-position-x: 201rpx;
}
.video-add {
    background: url("https://www.hnsjb.cn/static/img/wx/video.png") center center no-repeat;
    background-size: 50rpx 42rpx;
    background-position-x: 20rpx;
}
.bottom-area {
    position: fixed;
    bottom:0;
    left:0;
    width:100%;
    background: #F8F8FA;
    height:106rpx;
    border-top: 1rpx solid rgba(0,0,0,0.2);
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.bottom-area view {
    font-size: 24rpx;
    text-align: center;
}
.insert {
    color: #3098E5;
}
.insert-btn {
    flex:auto;
    background: url("https://www.hnsjb.cn/static/img/wx/insert.png") center center no-repeat;
    background-size: 50rpx 50rpx;
    margin:auto;
    margin-bottom: 7rpx;
}
.submit-btn {
    flex:auto;
    background: url("https://www.hnsjb.cn/static/img/wx/submit.png") center center no-repeat;
    background-size: 50rpx 50rpx;
    margin:auto;
    margin-bottom: 7rpx;
}