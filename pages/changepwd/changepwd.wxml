
<!--pages/login/login.wxml-->
<view class="login-page">
  <view class="avatar-container">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
  </view>
  <view class="login-form">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="section">
        <view class="input-label">旧密码</view>
        <view class="input">
          <input name="password" password type="text" placeholder="请输入旧密码" />
        </view>
      </view>
      <view class="section">
              <view class="input-label">新密码</view>
              <view class="input">
                <input name="newpassword" password type="text" placeholder="请输入新密码" />
              </view>
            </view>
            <view class="section">
                          <view class="input-label">确认新密码</view>
                          <view class="input">
                            <input name="repassword" password type="text" placeholder="请确认新密码" />
                          </view>
                        </view>
      <view class="btn-area">
        <button formType="submit">确认修改</button>
      </view>
    </form>
  </view>
</view>