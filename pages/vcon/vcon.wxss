}
.star-grey {
    background: url("https://www.hnsjb.cn/static/img/wxapp/star-grey.png") center center no-repeat;
    background-size: 42rpx 38rpx;
}
.star-gold {
    background: url("https://www.hnsjb.cn/static/img/wxapp/star-gold.png") center center no-repeat;
    background-size: 42rpx 38rpx;
}